{
  "name": "MobileRobotFramework",
  "private": true,
  "version": "0.0.0",
  "description": "Mobile Robot Framework",
  "repository": "https://github.com/weiss19ja/amos-ss16-proj2",
  "license": "AGPL",
  "devDependencies": {
    "bower": "^1.3.1",
    "copyfiles": "^0.2.1",
    "http-server": "^0.9.0",
    "install": "^0.6.1",
    "jasmine-core": "^2.3.4",
    "jshint": "^2.9.2",
    "karma": "~0.13",
    "karma-chrome-launcher": "^0.2.3",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.5",
    "karma-junit-reporter": "^0.4.2",
    "karma-spec-reporter": "0.0.26",
    "npm": "^3.8.7",
    "protractor": "^2.1.0",
    "rimraf": "^2.5.2",
    "shelljs": "^0.6.0"
  },
  "scripts": {
    "postinstall": "bower install",
    "prestart": "npm install",
    "start": "http-server webapp -a localhost -p 8000 -c-1",
    "start-prod": "http-server webapp -a 0.0.0.0 -p 80 -c-1",
    "pretest": "npm install",
    "test": "karma start karma.conf.js",
    "test-single-run": "karma start karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "protractor e2e-tests/protractor.conf.js",
    "lint": "jshint *.js **/*.js",
    "build": "npm install && npm run backend:clean && npm run backend:copy-webapp && npm run backend:build",
    "build:win": "npm install && npm run backend:clean && npm run backend:copy-webapp-win && npm run backend:build",
    "backend:clean": "mvn -f backend/pom.xml clean",
    "backend:build": "mvn -f backend/pom.xml package",
    "backend:copy-webapp": "copyfiles -u 1 'webapp/**/*.*' backend/src/main/webapp/client/ss16/proj2 && copyfiles -u 1 'webapp/**/*.*' backend/src/main/webapp/client/ss16/proj2-test",
    "backend:copy-webapp-win": "copyfiles -u 1 webapp/**/*.* backend/src/main/webapp/client/ss16/proj2 && copyfiles -u 1 webapp/**/*.* backend/src/main/webapp/client/ss16/proj2-test",
    "docker:build": "npm run docker:clean && npm run docker:copy-assets && npm run docker:build-image",
    "docker:clean": "rimraf docker/assets",
    "docker:copy-assets": "copyfiles package.json docker/assets/ && copyfiles -f backend/target/*-jar-with-dependencies.jar docker/assets/",
    "docker:build-image": "docker build -t mobilerobotframework/app docker/",
    "docker:pull": "docker pull mobilerobotframework/app",
    "docker:push": "docker push mobilerobotframework/app"
  }
}
